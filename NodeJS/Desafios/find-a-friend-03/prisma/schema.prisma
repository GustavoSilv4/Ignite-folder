generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Pet {
  id                    String   @id @default(uuid())
  name                  String
  about                 String?
  age                   String
  size                  Int
  energy_level          Int
  independence_level    Int
  environment_type      Int
  image                 String?
  requirements_adoption String[]
  created_at            DateTime @default(now())
  org                   Org?     @relation(fields: [orgId], references: [id])
  orgId                 String?

  @@map("pets")
}

model Org {
  id                 String   @id @default(uuid())
  responsible_person String
  email              String   @unique
  cep                String
  adress             String
  contact            String
  password_hash      String
  created_at         DateTime @default(now())
  pets               Pet[]

  @@map("orgs")
}
